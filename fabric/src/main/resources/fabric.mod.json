{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${mod_version}",

  "name": "${mod_name}",
  "description": "Allows easy customization of villager trades using datapacks",
  "authors": ["${mod_author}"],
  "contact": {
    "sources": "https://github.com/${repository}",
    "issues": "https://github.com/${repository}/issues"
  },

  "license": "CC0-1.0",

  "environment": "*",
  "entrypoints": {
    "server": ["com.possible_triangle.content_packs.FabricEntrypoint"],
    "client": ["com.possible_triangle.content_packs.FabricEntrypoint"]
  },

  "mixins": ["${mod_id}.mixins.json"],

  "depends": {
    "fabricloader": ">=0.14",
    "fabric": "*",
    "minecraft": "1.19.x",
    "java": ">=17"
  }
}
